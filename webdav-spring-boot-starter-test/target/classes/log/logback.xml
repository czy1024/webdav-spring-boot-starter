<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="logRoot" value="log"/>
    <property name="logLevel" value="${logging.level.root}"/>
    <property name="app" value="webdav"/>
    <property name="pattern" value="%d %p [%t] %c{20} %X{traceId:--} %m%n"/>
    <property name="logHistory" value="7"/>
    <property name="totalSizeCap" value="500MB"/>
    <property name="maxFileSize" value="10M"/>


    <appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/${app}.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logRoot}/${app}.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>${totalSizeCap}</totalSizeCap>
            <maxFileSize>500MB</maxFileSize>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logRoot}/${app}-info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logRoot}/${app}-info.log.%d{yyyy-MM-dd}.%i</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>9GB</totalSizeCap>
            <maxFileSize>500MB</maxFileSize>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <!-- 日志输出级别 -->
    <root level="${logLevel}">
        <appender-ref ref="INFO"/>
        <appender-ref ref="ERROR"/>
    </root>


</configuration>